<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jacks.login.mapper.UserMapper">
<!--    获取全部信息-->
    <select id="findAll" resultType="com.jacks.login.pojo.User">
        selection * from user
    </select>

    <select id="findByName" resultType="User">
        selection * from `user` where `username` = #{username}
    </select>

    <insert id="add">
        INSERT INTO user (username, password, addr, love, birthday, education, sex)
        VALUES
            (#{username}, #{password}, #{addr}, #{love}, #{birthday}, #{education}, #{sex});
    </insert>
</mapper>
