<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zb.manage.dal.mapper.TeacherMapper">
<!--    获取全部信息-->
    <select id="findAll" resultType="com.zb.manage.dal.model.Teacher">
        select * from teacher
    </select>

    <select id="findByName" resultType="Teacher">
        select * from `teacher` where `teachername` = #{teachername}
    </select>

    <insert id="add">
        INSERT INTO teacher (id, teachid, teachername, time)
        VALUES
            (#{id}, #{teachid}, #{teachername}, #{time});
    </insert>

    <delete id="delete">
        DELETE FROM `teacher` WHERE `id` = #{id}
    </delete>

    <update id="update" parameterType="Teacher">
        UPDATE teacher
        SET `teachername` = #{teachername}
        WHERE `id` = #{id}
    </update>

    <select id="getById" resultType="Teacher">
        select * from `teacher` where `id` = #{id}
    </select>

    <select id="getByTeachid" resultType="Teacher">
        select * from `teacher` where `teachid` = #{teachid}
    </select>
</mapper>
